package OOP;
class Enemy{
    String name;
    public static int health;

    public Enemy (String name, int health){
        this.name = name;
        this.health = health;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public int getHealth() {
        return health;
    }

    public void setHealth(int health) {
        this.health = health;
    }

    public static int takeDamage(int damage){
        health = health - damage;
        return health;
    }
}
class Hero {
    String name;
    int damage;
    public Hero (String name){
        this.name = name;
    }
    public String getName(){
        return name;
    }

    public void attackEnemy(int damage){
        System.out.println(name + " атакує ворога і завдає "  + damage + " урону");
        Enemy.takeDamage(damage);
    }
}

class Warrior extends Hero {
    Warrior(String name) {
        super(name);
    }
    public void attackEnemy(int damage){
        System.out.println(name + " розмахує мечом і завдає "  + damage + " урону");
        Enemy.takeDamage(damage);
    }
}

class Mage extends Hero {
    Mage(String name) {
        super(name);
    }
    public void attackEnemy(int damage){
        System.out.println(name + " викликає стовб світла і завдає "  + damage + " урону");
        Enemy.takeDamage(damage);
    }
}
class Archer extends Hero {
   public Archer(String name) {
        super(name);
    }
    public void attackEnemy(int damage){
        System.out.println(name + " стріляє с лука і завдає " + damage + " урону");
        Enemy.takeDamage(damage);
    }
}



public class TrainingGround {
    public static void main(String[] args) {
        Enemy enemy1 = new Enemy("Greb", 25);

        System.out.println ("Ворога звати " + enemy1.getName() +",а здоровья в нього " + enemy1.getHealth());

        Hero hero1 = new Hero("Foggy");
        hero1.attackEnemy(5);

        Warrior hero2 = new Warrior("Rory");
        hero2.attackEnemy(7);

        Mage hero3 = new Mage("Soul");
        hero3.attackEnemy(4);

        Archer hero4 = new Archer("John");
        hero4.attackEnemy(2);

        System.out.println ("Здоровья ворога після атак " + enemy1.getHealth());
    }
}
